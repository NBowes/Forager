<div class="ui page grid">
      <div class="row">
          <div class="column">
              <div class="ui huge message page grid center alligned">
                  <h1 class="sub-heading">  Welcome, <%= current_user.name %>!</h1>
                  <div class=' '>
                    <p>Member since: <%= current_user.created_at.strftime("%d %b. %Y") %></p>
                  </div>
              </div>
              <!-- <%= image_tag gravatar_url(current_user.email, 256), alt: "", class:'ui small circular image' %> -->
              <% if current_user.avatar = nil %>
              <%= form_tag user_path(current_user), multipart: true do %>
                <%= file_field_tag 'user[avatar]', as: :file %>
                <%= submit_tag 'Add image', class:'ui button'%>
              <% end %>
              <% else %>
                <%= image_tag current_user.avatar, class:'ui small circular image'%>
              <% end %>
              <!-- <%= image_tag @user.avatar.url(:thumb) %> -->
              <div class='row'>
                <div class="ui form center alligned">
                  <div class="field">
                    <label class='ui medium heading'>About me</label>
                      <% if current_user.description == nil %>
                        <%= link_to 'Add About Me', user_path, data:{no_turbolinks: 'true'},class:'ui button add-me' %>
                          <div class='description-box'>
                            <%= form_tag user_path(current_user), class:'ui form' do %>
                              <%= text_area_tag 'user[description]', nil, placeholder: 'Tell us about yourself!'%>
                              <%= submit_tag 'Update', class:'ui button add'%> <%= link_to 'Cancel', user_path, class:' ui button cancel' %>
                            <% end %>
                          </div>
                          <% else %>
                          <%= current_user.description %>
                            </br>
                            <%= link_to 'Edit About Me', user_path, class:'ui button edit-me' %>
                              <div class='description-box'>
                                <%= form_tag user_path(current_user), class:'ui form' do %>
                                  <%= text_area_tag 'user[description]', nil, placeholder: 'Tell us about yourself!'%>
                                  <%= submit_tag 'Update', class:'ui button update'%> <%= link_to 'Cancel', user_path, class:' ui button cancel' %>
                                <% end %>
                              </div>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
<%= javascript_include_tag 'users' %>
